<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="navbar navbar-light bg-danger display-flex justify-space-between align-center p-2">
      <h1>
        <a class="navbar-brand" href="/">Punchikin</a>
      </h1>
      <nav>
        {{#if logged_in}}
        <button type="button" class="btn btn-secondary"><a class="text-light"style="text-decoration: none" href="/profile">Profile</a></button>
        <button type="button" class="btn btn-secondary"><a class="text-light"style="text-decoration: none" id="logout">Logout</a></button>
        {{else}}
        <button type="button" class="btn btn-secondary"><a class="text-light" style="text-decoration: none" href="/login">Login</a></button>
        {{/if}}
        <button type="button" class="btn btn-secondary"><a class="text-light"style="text-decoration: none" href="/scoreboard">Scoreboard</a></button>

      </nav>
    </header>
    <main class="container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
  </div>
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>
</body>

</html>